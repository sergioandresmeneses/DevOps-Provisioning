# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/bionic64"
  #config.vm.box = "devops-workshop"
  config.vm.provider :virtualbox do |vb|
        vb.name = "prov-vagrant"
        #vb.customize [ "modifyvm", :id, "--uartmode1", "disconnected" ]
  end
#A set of ports exposed for general purpose.
  config.vm.network "forwarded_port", guest: 8080, host: 8080
##
#Shell config to run a custom boostrap and redirect the log errors to a custom file
  config.vm.provision :shell, path: "bootstrap.sh", args: "2>&1 >> /vagrant/log-file.txt"
end
